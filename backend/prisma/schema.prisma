generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  username    String @unique
  password    String
  email       String @unique
  accountType String
  token       String @default("")
}

model Otp {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String @unique
  otp       String
  createdAt Int
  expiresAt Int
}
